@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<MudText Typo="Typo.subtitle2">First On 20 Wins</MudText>

<MudText Typo="Typo.h6">Blazor is @Text</MudText>
<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ButtonOnClick">@ButtonText</MudButton>
@if (ButtonClicked > ButtonClicked2)
    {
        <MudAlert Severity="Severity.Success" ContentAlignment="HorizontalAlignment.Center"Variant="Variant.Outlined">Blazor is winning</MudAlert>

    }
<MudText Typo="Typo.h1">____VS____</MudText>
<MudText Typo="Typo.h6">MudBlazor is @Text2</MudText>
<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ButtonOnClick2">@ButtonText2</MudButton>
@if (ButtonClicked2 > ButtonClicked2)
{
    <MudAlert Severity="Severity.Success" ContentAlignment="HorizontalAlignment.Center"Variant="Variant.Outlined">MudBlazor is winning</MudAlert>

}

@code {
    public string Text { get; set; } = "????";
    public string Text2 { get; set; } = "????";
    public string ButtonText { get; set; } = "Click Me";
    public string ButtonText2 { get; set; } = "Or Click Me";
    public int ButtonClicked { get; set; }
    public int ButtonClicked2 { get; set;}
    public int Win;

    void ButtonOnClick()
    {
        ButtonClicked += 1;
        Text = $"Awesome x {ButtonClicked}";
        ButtonText = "Click Me Again";
        
    }
    
    void ButtonOnClick2()
    {
        ButtonClicked2 += 1;
        Text2 = $"Awesome x {ButtonClicked2}";
        ButtonText2 = "Click Me Again";
        
    }
    
    
}


